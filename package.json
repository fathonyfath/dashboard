{
  "name": "tired-stack",
  "version": "1.0.0",
  "module": "src/index.tsx",
  "scripts": {
    "check": "xss-scan",
    "dev": "concurrently --kill-others-on-fail --kill-others 'bun run assets:watch' 'bun run server:watch'",
    "build": "bun run assets:build && bun run server:build",
    "assets:watch": "bun run build.config.ts --watch",
    "server:watch": "bun run --hot src/index.tsx",
    "assets:build": "bun run build.config.ts --minify",
    "server:build": "bun build --compile src/index.tsx --outfile server",
    "prettier:write": "prettier . --write"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.11",
    "@kitajs/ts-html-plugin": "^4.1.3",
    "@tailwindcss/postcss": "^4.1.18",
    "bun-types": "latest",
    "concurrently": "^9.2.1",
    "htmx.org": "^2.0.8",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-load-config": "^6.0.1",
    "postcss-minify": "^1.2.0",
    "preline": "^4.0.1",
    "prettier": "3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {},
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
